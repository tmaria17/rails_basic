<%= link_to "Create a New Student", new_student_path, class: "new-student" %>
<%= link_to "All Students", students_path, class: "all-students" %>
<%= form_for(@student) do |f| %>
  <ul>
  <% @student.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

    <%= f.submit %>
  </p>
<% end %>
